<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransActivityFullScreenWithActionbar" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:progressBarStyle">@android:style/Widget.DeviceDefault.ProgressBar</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:actionBarSize">@dimen/action_bar_h</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:actionMenuTextColor">@color/action_bar_menu_textcolor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/main_background_color</item>
        <item name="android:navigationIcon">@drawable/tw_ic_ab_back_mtrl</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
